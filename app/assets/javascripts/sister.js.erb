function Sister(el, messenger) {
  this.el = el;
  this.messenger = messenger || new NullMessenger();

  this.hoverInHandler = function() {
    this.el.css('background', 'url("<%= asset_path('trollface.jpeg') %>")');
  }
  this.hoverOutHandler = function() {
    this.el.css('background', '');
  }

  this.messenger.add('hoverIn', this.hoverInHandler.bind(this));
  this.messenger.add('hoverOut', this.hoverOutHandler.bind(this));
}